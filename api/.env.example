# Configuração do Servidor
PORT=3000
NODE_ENV=development

# URL do Frontend (para CORS)
FRONTEND_URL=http://localhost:4200

# Configuração do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5432/mesquita_cakes?schema=public"

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# PIX Configuration (Mercado Pago, PagSeguro, etc.)
PIX_API_KEY=your-pix-api-key
PIX_ACCESS_TOKEN=your-pix-access-token
PIX_WEBHOOK_URL=http://localhost:3000/webhooks/pix

# Email Configuration (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app

# API Externa para CEP (ViaCEP é grátis)
VIACEP_URL=https://viacep.com.br/ws
